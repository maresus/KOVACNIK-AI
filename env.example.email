# Pošiljatelj
SMTP_FROM_EMAIL=info@kovacnik.com
SMTP_FROM_NAME=Domačija Kovačnik

# Admin prejemnik (za obvestila o novih rezervacijah)
ADMIN_EMAIL=info@kovacnik.com

